<script>
    document.getElementById('booking-form').addEventListener('submit', function(event) {
        event.preventDefault();
        const name = document.getElementById('name').value;
        alert(`شكرًا لك يا ${name}، تم إرسال طلب الحجز بنجاح!`);
        this.reset();
    });
